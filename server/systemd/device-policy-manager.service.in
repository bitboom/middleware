[Unit]
Description=Device Policy Manager
Wants=lbs-server.service net-config.service pulseaudio.service
After=lbs-server.service net-config.service pulseaudio.service

[Service]
User=${USER_NAME}
Group=${GROUP_NAME}
SmackProcessLabel=${SMACK_LABEL}
ExecStartPre=${CMAKE_INSTALL_PREFIX}/bin/dpm-storage-builder
ExecStart=${CMAKE_INSTALL_PREFIX}/bin/device-policy-manager -o 5000
Restart=on-failure
ExecReload=/bin/kill -HUP $MAINPID
CapabilityBoundingSet=~CAP_MAC_ADMIN
CapabilityBoundingSet=~CAP_MAC_OVERRIDE

[Install]
WantedBy=multi-user.target
